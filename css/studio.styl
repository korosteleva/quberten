.studio
    &-about
        margin 0 auto
        max-width 550px

        p
            text-align center

    &-people
        display flex
        flex-wrap wrap
        justify-content space-around
        margin 70px 0 30px 0

    &-person
        width 170px
        margin 0 10px 50px 10px

        &-img
            max-width 100%

            &-square
                border-radius 19%

            &-circle
                border-radius 50%


        &-name
            display block
            font-weight 800
            font-size 24px
            line-height 28px
            margin-top 25px
            margin-bottom 5px